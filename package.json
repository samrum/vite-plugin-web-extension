{
  "name": "@samrum/vite-plugin-web-extension",
  "version": "4.1.0",
  "description": "A vite plugin for generating cross browser platform, ES module based web extensions",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@8.3.1",
  "files": [
    "client.js",
    "client.d.ts",
    "dist",
    "README.md",
    "types"
  ],
  "scripts": {
    "build": "tsc --noEmit && rollup -c",
    "dev": "rollup -c -w",
    "lint": "prettier --write --loglevel warn .",
    "lint:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "husky install",
    "release": "standard-version --sign"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "pnpm test:run && pnpm build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samrum/vite-plugin-web-extension.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "web",
    "extension",
    "browser",
    "chrome",
    "firefox",
    "edge",
    "manifest",
    "manifest V2",
    "manifest V3"
  ],
  "author": "Ruben Medina",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samrum/vite-plugin-web-extension/issues"
  },
  "homepage": "https://github.com/samrum/vite-plugin-web-extension#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.18",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "2.4.1",
    "rollup": "^3.9.0",
    "sass": "^1.60.0",
    "standard-version": "^9.5.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.3"
  },
  "peerDependencies": {
    "vite": "^3.0.2 || ^4.0.3"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "dependencies": {
    "@types/chrome": "^0.0.227",
    "@types/etag": "^1.8.1",
    "content-security-policy-parser": "^0.4.1",
    "etag": "^1.8.1",
    "fs-extra": "^11.1.0",
    "magic-string": "^0.27.0",
    "vite": "^4.1.1"
  }
}
