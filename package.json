{
  "name": "@samrum/vite-plugin-web-extension",
  "version": "1.0.2",
  "description": "A vite plugin for generating cross browser platform, ES module based web extensions",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@7.6.0",
  "files": [
    "client.js",
    "client.d.ts",
    "dist",
    "README.md",
    "types"
  ],
  "scripts": {
    "build": "tsc --noEmit && rollup -c",
    "dev": "rollup -c -w",
    "lint": "prettier --write --loglevel warn .",
    "lint:check": "prettier --check .",
    "test": "vitest",
    "prepare": "husky install",
    "release": "standard-version --sign"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "pnpm test && pnpm build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samrum/vite-plugin-web-extension.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "web",
    "extension",
    "browser",
    "chrome",
    "firefox",
    "edge",
    "manifest",
    "manifest V2",
    "manifest V3"
  ],
  "author": "Ruben Medina",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samrum/vite-plugin-web-extension/issues"
  },
  "homepage": "https://github.com/samrum/vite-plugin-web-extension#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "@rollup/pluginutils": "^4.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.4.9",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.4.1",
    "rollup": "^2.55.1",
    "standard-version": "^9.5.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vitest": "^0.18.1"
  },
  "peerDependencies": {
    "vite": "^3.0.2"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  },
  "dependencies": {
    "@types/chrome": "^0.0.193",
    "@types/etag": "^1.8.1",
    "etag": "^1.8.1",
    "fs-extra": "^10.0.0",
    "magic-string": "^0.25.7",
    "vite": "~3.0.2"
  }
}
